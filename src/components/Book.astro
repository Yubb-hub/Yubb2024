---
interface Props {
  title: string;
  body: string;
  href: string;
  img: string;
}

const { href, title, body, img } = Astro.props;
---

<li class="link-card">
  <img src={img} alt="" />
  <a href={href}>
    <h2>
      {title}
      <span>&rarr;</span>
    </h2>
    <p>
      {body}
    </p>
  </a>
</li>

<style>
  :root {
    --accent: 136, 58, 234;
    --accent-light: 224, 204, 250;
    --accent-dark: 49, 10, 101;
    --accent-gradient: linear-gradient(
      45deg,
      rgb(var(--accent)),
      rgb(var(--accent-light)) 30%,
      rgb(255, 255, 255) 60%
    );
  }
  .link-card {
    margin: 1em 0;
    list-style: none;
    display: flex;
    padding: 1px;
    background-color: #ffffff;
    background-image: none;
    background-size: 400%;
    border-radius: 7px;
    background-position: 100%;
    transition: background-position 0.6s cubic-bezier(0.22, 1, 0.36, 1);
    box-shadow: inset 0 0 0 1px rgba(255, 255, 255, 0.1);
  }
  .link-card > a {
    width: 100%;
    text-decoration: none;
    line-height: 1.4;
    padding: calc(1.5rem - 1px);
    border-radius: 8px;
    color: #ffffff;
    background-color: #ffffff;
    opacity: 0.;
  }

  .link-card > a {
    left: 20px;
top: 200px;
width: 800px;
height: px;
opacity: 3;
border-radius: 30px;
background: rgb(16, 221, 207);
box-shadow: 5px 20px 10px  rgba(0, 0, 0, 0.237);
  }
  h2 {
    margin: 0;
    font-size: 1.25rem;
    transition: color 0.6s cubic-bezier(0.22, 1, 0.36, 1);
  }
  p {
    margin-top: 0rem;
    margin-bottom: 0;
  }
  .link-card:is(:hover, :focus-within) {
    background-position: 0;
    background-image: var(--accent-gradient);
  }
  .link-card:is(:hover, :focus-within) h2 {
    color: rgb(var(--accent-light));
  }
  .link-card img {
    width: 100px;
  }
</style>
